{
  "compilerOptions": {
    "types": [ "node" ],
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "classic",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": ".",
    "declaration": true,
    "target": "es2015",
    "module": "es2015",
    "lib": [ "es2015", "dom" ],
    "strict": true
  },
  "include": [
    "src/**/*", "teste.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
